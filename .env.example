MERCURE_PUBLISH_URL=http://mercure/.well-known/mercure
MERCURE_JWT_SECRET=your_256_bit_secret_here
MERCURE_JWT_PUBLISHER=your_mercure_jwt_publisher_token_here #generate the JWT token in jwt.io and put here
